/**
 * Routes for resource {{namespace}}/{{resource}}
 */
 $app->group(['namespace' => '{{namespace}}', 'prefix' => '{{resource}}'], function ($app) {
     $app->get('/', '{{controller}}@all');
     $app->get('/{id}', '{{controller}}@get');
     $app->post('/', '{{controller}}@add');
     $app->put('/{id}', '{{controller}}@put');
     $app->delete('/{id}', '{{controller}}@remove');
 });
